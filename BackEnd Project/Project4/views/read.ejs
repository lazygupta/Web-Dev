<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900">
    <div class="max-w-full max-h-full p-10 text-white mb-3">
        <div class="nav mb-5">
            <a class="text-blue-500" href="/" class="">Back to Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-5 flex-wrap mb-5">
            <% users.forEach((user) => { %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 bg-zinc-700 rounded-lg overflow-hidden">
                        <img src="<%= user.image %>" alt="" class="w-full h-full object-cover ">
                    </div>
                    <h3 class="text-2xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h3>
                    <div class="flex gap-3 mt-10">
                        <a href="/edit/<%= user._id %>" class="text-zinc-200">Edit User</a>

                        <a href="/delete/<%= user.id %>" class="text-red-500">Delete User</a>
                    </div>
                </div>
            <% }) %>

        </div>
        
    </div>
</body>
</html>